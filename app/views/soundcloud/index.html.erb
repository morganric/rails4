<script src="http://connect.soundcloud.com/sdk.js"></script>
<script>
// initialize client with app credentials
SC.initialize({
  client_id: '0a5a8824df0c97aedb12448786a6f1de',
  redirect_uri: 'http://floating-escarpment-5815.herokuapp.com/soundcloud'
});

$('#soundcloud').on('click', function() {

	$(this).toggle();

	SC.connect(function() {
	  SC.get('/me', function(me) { 
	    $('h1').html('Hello, ' + me.username); 
	  });

	  SC.get('/me/tracks', function(tracks) { 
	    var tracks = tracks;
		
		for (var i = 0; i < tracks.length; i++) {
			var link = "https://api.mixcloud.com/upload/?mp3=" + tracks[i].download_url +"&name=" + tracks[i].title + "&sections-1-artist=ArtistName&sections-1-song=SongName";
			$('ul#tracks').append("<li><a href='" + link + "' />" + tracks[i].title + "</a></li>" );
		}


	    return tracks;

	  });

	});	

});


</script>